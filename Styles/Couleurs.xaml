<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════════
        🎨 DICTIONNAIRE DE COULEURS - GESTIONNAIRE DE LOGEMENT
        ═══════════════════════════════════════════════════════════════════
        📌 Toutes les couleurs de l'application sont centralisées ici
        📌 Pour changer une couleur, modifiez uniquement ce fichier
        ═══════════════════════════════════════════════════════════════════
    -->

    <!--  ───────────────────────────────────────────────────────────────────  -->
    <!--  🎯 1. COULEURS PRINCIPALES (PRIMARY COLORS)  -->
    <!--  ───────────────────────────────────────────────────────────────────  -->
    <SolidColorBrush x:Key="BleuPrincipal" Color="#3B82F6" />
    <!--  🔵 Bleu principal  -->
    <SolidColorBrush x:Key="BleuFonce" Color="#2563EB" />
    <!--  🔵 Bleu foncé (hover)  -->
    <SolidColorBrush x:Key="BleuClair" Color="#60A5FA" />
    <!--  🔵 Bleu clair  -->

    <!--  ───────────────────────────────────────────────────────────────────  -->
    <!--  ✅ 2. COULEURS DE SUCCÈS (SUCCESS COLORS)  -->
    <!--  ───────────────────────────────────────────────────────────────────  -->
    <SolidColorBrush x:Key="VertSucces" Color="#10B981" />
    <!--  ✅ Vert succès  -->
    <SolidColorBrush x:Key="VertFonce" Color="#059669" />
    <!--  ✅ Vert foncé (hover)  -->

    <!--  ───────────────────────────────────────────────────────────────────  -->
    <!--  ⚠️ 3. COULEURS D'ALERTE (WARNING COLORS)  -->
    <!--  ───────────────────────────────────────────────────────────────────  -->
    <SolidColorBrush x:Key="OrangeAlerte" Color="#F59E0B" />
    <!--  ⚠️ Orange alerte  -->
    <SolidColorBrush x:Key="JauneAlerte" Color="#FBBF24" />
    <!--  ⚠️ Jaune alerte  -->

    <!--  ───────────────────────────────────────────────────────────────────  -->
    <!--  ❌ 4. COULEURS D'ERREUR (ERROR COLORS)  -->
    <!--  ───────────────────────────────────────────────────────────────────  -->
    <SolidColorBrush x:Key="RougeErreur" Color="#EF4444" />
    <!--  ❌ Rouge erreur  -->
    <SolidColorBrush x:Key="RougeFonce" Color="#DC2626" />
    <!--  ❌ Rouge foncé (hover)  -->

    <!--  ───────────────────────────────────────────────────────────────────  -->
    <!--  🌑 5. COULEURS NEUTRES (NEUTRAL COLORS)  -->
    <!--  ───────────────────────────────────────────────────────────────────  -->
    <SolidColorBrush x:Key="Gris50" Color="#F9FAFB" />
    <!--  ⬜ Gris très clair (background)  -->
    <SolidColorBrush x:Key="Gris100" Color="#F3F4F6" />
    <!--  ⬜ Gris clair  -->
    <SolidColorBrush x:Key="Gris200" Color="#E5E7EB" />
    <!--  ⬜ Gris moyen clair (bordures)  -->
    <SolidColorBrush x:Key="Gris300" Color="#D1D5DB" />
    <!--  ⬜ Gris moyen  -->
    <SolidColorBrush x:Key="Gris400" Color="#9CA3AF" />
    <!--  ⬜ Gris  -->
    <SolidColorBrush x:Key="Gris500" Color="#6B7280" />
    <!--  ⬜ Gris foncé (textes secondaires)  -->
    <SolidColorBrush x:Key="Gris600" Color="#4B5563" />
    <!--  ⬜ Gris très foncé  -->
    <SolidColorBrush x:Key="Gris700" Color="#374151" />
    <!--  ⬜ Gris sombre  -->
    <SolidColorBrush x:Key="Gris800" Color="#1F2937" />
    <!--  ⬜ Gris très sombre (textes principaux)  -->
    <SolidColorBrush x:Key="Gris900" Color="#111827" />
    <!--  ⬛ Noir grisé  -->

    <!--  ───────────────────────────────────────────────────────────────────  -->
    <!--  🧾 6. COULEURS SPÉCIFIQUES FACTURES  -->
    <!--  ───────────────────────────────────────────────────────────────────  -->
    <SolidColorBrush x:Key="BleuEau" Color="#06B6D4" />
    <!--  💧 Bleu eau  -->
    <SolidColorBrush x:Key="JauneElectricite" Color="#FBBF24" />
    <!--  ⚡ Jaune électricité  -->
    <SolidColorBrush x:Key="OrangeChauffage" Color="#F97316" />
    <!--  🔥 Orange chauffage  -->

</ResourceDictionary>
