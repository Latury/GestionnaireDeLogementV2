<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Couleurs principales (Bleu)  -->
    <SolidColorBrush x:Key="CouleurPrincipale" Color="#3B82F6" />
    <SolidColorBrush x:Key="CouleurPrincipaleFoncee" Color="#2563EB" />
    <SolidColorBrush x:Key="CouleurPrincipaleClaire" Color="#60A5FA" />
    <SolidColorBrush x:Key="CouleurPrincipaleTresClaire" Color="#DBEAFE" />

    <!--  Couleurs de succès (Vert)  -->
    <SolidColorBrush x:Key="CouleurSucces" Color="#10B981" />
    <SolidColorBrush x:Key="CouleurSuccesFoncee" Color="#059669" />
    <SolidColorBrush x:Key="CouleurSuccesClaire" Color="#34D399" />

    <!--  Couleurs d'alerte (Orange/Jaune)  -->
    <SolidColorBrush x:Key="CouleurAlerte" Color="#F59E0B" />
    <SolidColorBrush x:Key="CouleurAlerteFoncee" Color="#D97706" />
    <SolidColorBrush x:Key="CouleurAlerteClaire" Color="#FBBF24" />

    <!--  Couleurs d'erreur (Rouge)  -->
    <SolidColorBrush x:Key="CouleurErreur" Color="#EF4444" />
    <SolidColorBrush x:Key="CouleurErreurFoncee" Color="#DC2626" />
    <SolidColorBrush x:Key="CouleurErreurClaire" Color="#F87171" />

    <!--  Couleurs neutres (Gris)  -->
    <SolidColorBrush x:Key="Gris50" Color="#F9FAFB" />
    <SolidColorBrush x:Key="Gris100" Color="#F3F4F6" />
    <SolidColorBrush x:Key="Gris200" Color="#E5E7EB" />
    <SolidColorBrush x:Key="Gris300" Color="#D1D5DB" />
    <SolidColorBrush x:Key="Gris400" Color="#9CA3AF" />
    <SolidColorBrush x:Key="Gris500" Color="#6B7280" />
    <SolidColorBrush x:Key="Gris600" Color="#4B5563" />
    <SolidColorBrush x:Key="Gris700" Color="#374151" />
    <SolidColorBrush x:Key="Gris800" Color="#1F2937" />
    <SolidColorBrush x:Key="Gris900" Color="#111827" />

    <!--  Couleurs spécifiques par fonctionnalité  -->
    <SolidColorBrush x:Key="CouleurEau" Color="#06B6D4" />
    <SolidColorBrush x:Key="CouleurElectricite" Color="#FBBF24" />
    <SolidColorBrush x:Key="CouleurChauffage" Color="#F97316" />
    <SolidColorBrush x:Key="CouleurFacture" Color="#8B5CF6" />
    <SolidColorBrush x:Key="CouleurAchat" Color="#EC4899" />

    <!--  Couleurs de fond  -->
    <SolidColorBrush x:Key="FondPrincipal" Color="#FFFFFF" />
    <SolidColorBrush x:Key="FondSecondaire" Color="#F9FAFB" />
    <SolidColorBrush x:Key="FondCarte" Color="#FFFFFF" />

    <!--  Couleurs de texte  -->
    <SolidColorBrush x:Key="TextePrincipal" Color="#111827" />
    <SolidColorBrush x:Key="TexteSecondaire" Color="#6B7280" />
    <SolidColorBrush x:Key="TexteClair" Color="#9CA3AF" />
    <SolidColorBrush x:Key="TexteBlanc" Color="#FFFFFF" />

    <!--  Couleurs de bordure  -->
    <SolidColorBrush x:Key="BordureClaire" Color="#E5E7EB" />
    <SolidColorBrush x:Key="BordureMoyenne" Color="#D1D5DB" />
    <SolidColorBrush x:Key="BordureFoncee" Color="#9CA3AF" />

</ResourceDictionary>
