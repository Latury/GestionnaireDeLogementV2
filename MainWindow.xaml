    <!--  ═════════════════════════════════════  -->
    <!--  RESSOURCES DE LA FENÊTRE  -->
    <!--  ═════════════════════════════════════  -->
    <Window.Resources>

        <!--  Style bouton navigation standard  -->
        <Style x:Key="BoutonNavigation" TargetType="Button">
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="24,0,0,0" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,4,0">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CouleurPrincipaleTresClaire}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CouleurPrincipaleClaire}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style bouton navigation actif  -->
        <Style
            x:Key="BoutonNavigationActif"
            BasedOn="{StaticResource BoutonNavigation}"
            TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CouleurPrincipaleTresClaire}" />
            <Setter Property="Foreground" Value="{StaticResource CouleurPrincipale}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{StaticResource CouleurPrincipale}"
                            BorderThickness="0,0,4,0">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  ═════════════════════════════════════  -->
    <!--  STRUCTURE PRINCIPALE  -->
    <!--  ═════════════════════════════════════  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  ═════════════════════════════════════  -->
        <!--  MENU DE NAVIGATION (GAUCHE)  -->
        <!--  ADAPTATIF AUX PETITES HAUTEURS  -->
        <!--  ═════════════════════════════════════  -->
        <Border
            Grid.Column="0"
            Background="{StaticResource FondCarte}"
            BorderBrush="{StaticResource BordureClaire}"
            BorderThickness="0,0,1,0">

            <!--  Scroll vertical automatique  -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">

                <StackPanel>

                    <!--  EN-TÊTE  -->
                    <Border Height="80" Background="{StaticResource CouleurPrincipale}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="White"
                                TextAlignment="Center">
                                <Run Text="{StaticResource EmojiMaison}" />
                                <Run Text=" Gestionnaire" />
                            </TextBlock>
                            <TextBlock
                                Margin="0,3,0,0"
                                FontSize="17"
                                Foreground="White"
                                Opacity="0.95"
                                Text="de Logement"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <Border Height="12" />

                    <!--  ═════ SUIVI ═════  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="SUIVI" />

                    <Button
                        x:Name="BtnAccueil"
                        Click="BtnAccueil_Click"
                        Style="{StaticResource BoutonNavigationActif}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiAccueil}" />
                            <Run Text="  Accueil" />
                        </TextBlock>
                    </Button>

                    <Button
                        x:Name="BtnFactures"
                        Click="BtnFactures_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiFactures}" />
                            <Run Text="  Factures" />
                        </TextBlock>
                    </Button>

                    <Button
                        x:Name="BtnEau"
                        Click="BtnEau_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiEau}" />
                            <Run Text="  Eau" />
                        </TextBlock>
                    </Button>

                    <Button
                        x:Name="BtnElectricite"
                        Click="BtnElectricite_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiElectricite}" />
                            <Run Text="  Électricité" />
                        </TextBlock>
                    </Button>

                    <Button
                        x:Name="BtnChauffage"
                        Click="BtnChauffage_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiChauffage}" />
                            <Run Text="  Chauffage" />
                        </TextBlock>
                    </Button>

                    <Border
                        Height="1"
                        Margin="12,14"
                        Background="{StaticResource BordureClaire}" />

                    <!--  ═════ ANALYSE ═════  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="ANALYSE" />

                    <Button
                        x:Name="BtnAchats"
                        Click="BtnAchats_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiAchats}" />
                            <Run Text="  Achats" />
                        </TextBlock>
                    </Button>

                    <Button
                        x:Name="BtnStatistiques"
                        Click="BtnStatistiques_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiStatistiques}" />
                            <Run Text="  Statistiques" />
                        </TextBlock>
                    </Button>

                    <Border
                        Height="1"
                        Margin="12,14"
                        Background="{StaticResource BordureClaire}" />

                    <!--  ═════ APPLICATION ═════  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="APPLICATION" />

                    <Button
                        x:Name="BtnParametres"
                        Click="BtnParametres_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="{StaticResource EmojiParametres}" />
                            <Run Text="  Paramètres" />
                        </TextBlock>
                    </Button>

                    <!--  FUTUR : HISTORIQUE  -->
                    <Button
                        IsEnabled="False"
                        Opacity="0.5"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run FontSize="18" Text="🕒" />
                            <Run Text="  Historique" />
                        </TextBlock>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  ═════════════════════════════════════  -->
        <!--  ZONE DE CONTENU (DROITE)  -->
        <!--  ═════════════════════════════════════  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  BARRE DE TITRE  -->
            <Border
                Grid.Row="0"
                Padding="30,0"
                Background="{StaticResource FondCarte}"
                BorderBrush="{StaticResource BordureClaire}"
                BorderThickness="0,0,0,1">
                <TextBlock
                    x:Name="TitrePage"
                    VerticalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextePrincipal}">
                    <Run x:Name="EmojiTitre" Text="🏠" />
                    <Run x:Name="TexteTitre" Text="Tableau de bord" />
                </TextBlock>
            </Border>

            <!--  CONTENU  -->
            <Frame
                x:Name="FramePrincipal"
                Grid.Row="1"
                Background="{StaticResource FondSecondaire}"
                NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
