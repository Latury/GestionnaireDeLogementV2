<Window
    x:Class="GestionnaireDeLogement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestionnaire de Logement"
    Width="1200"
    Height="700"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Padding="20"
            Background="#3B82F6">
            <StackPanel>
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MENU" />

                <Button
                    x:Name="BtnAccueil"
                    Height="40"
                    Margin="0,20,0,0"
                    Click="BtnAccueil_Click"
                    Content="Accueil" />
                <Button
                    x:Name="BtnFactures"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnFactures_Click"
                    Content="Factures" />
                <Button
                    x:Name="BtnEau"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnEau_Click"
                    Content="Eau" />
                <Button
                    x:Name="BtnElectricite"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnElectricite_Click"
                    Content="Electricite" />
                <Button
                    x:Name="BtnChauffage"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnChauffage_Click"
                    Content="Chauffage" />
                <Button
                    x:Name="BtnAchats"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnAchats_Click"
                    Content="Achats" />
                <Button
                    x:Name="BtnStatistiques"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnStatistiques_Click"
                    Content="Stats" />
                <Button
                    x:Name="BtnParametres"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="BtnParametres_Click"
                    Content="Parametres" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="30,0"
                Background="#F3F4F6">
                <TextBlock
                    x:Name="TitrePage"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Tableau de bord" />
            </Border>

            <Frame
                x:Name="FramePrincipal"
                Grid.Row="1"
                NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
