<Page
    x:Class="GestionnaireDeLogement.Vues.EauVue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionnaireDeLogement.Vues"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EauVue"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    Background="{StaticResource FondSecondaire}"
    mc:Ignorable="d">

    <!--  ============================================================= Gestionnaire de Logement Module Eau Copyright © 2026 Flo Latury Licence : CC BY-NC 4.0 Usage commercial interdit =============================================================  -->
    <!--  ══════════════════════════════════════════════════════════  -->
    <!--  RESSOURCES LOCALES  -->
    <!--  ══════════════════════════════════════════════════════════  -->
    <Page.Resources>

        <!--  Style pour les cartes  -->
        <Style x:Key="Carte" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="25" />
            <Setter Property="Margin" Value="0,0,0,20" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Direction="270"
                        Opacity="0.1"
                        ShadowDepth="3"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style pour les cartes de statistiques  -->
        <Style x:Key="CarteStatistique" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource FondInfoClaire}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,0,15,0" />
        </Style>

        <!--  Style pour les boutons  -->
        <Style x:Key="BoutonPrincipal" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CouleurPrincipale}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565C0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD" />
                                <Setter TargetName="border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style pour les items de la ListView  -->
        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="{StaticResource BordureClaire}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gris50}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource FondInfoClaire}" />
                    <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style pour la ListView  -->
        <Style x:Key="ListViewRelevesStyle" TargetType="ListView">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>

        <!--  =========================================================  -->
        <!--  STYLE PREMIUM : BOUTON ACTION ARRONDI  -->
        <!--  =========================================================  -->
        <Style x:Key="BoutonAction" TargetType="Button">

            <!--  Taille  -->
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="48" />

            <!--  Texte  -->
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />

            <!--  Apparence  -->
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="20,8" />

            <!--  Template personnalisé pour gérer le CornerRadius  -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="24">
                            <!--  24 = bouton bien arrondi  -->

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--  Effets au survol / clic / désactivé  -->
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Gris300}" />
                                <Setter TargetName="border" Property="Opacity" Value="0.6" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <!--  ══════════════════════════════════════════════════════════  -->
    <!--  CONTENU PRINCIPAL  -->
    <!--  ══════════════════════════════════════════════════════════  -->
    <ScrollViewer Margin="0,3,0,0" VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Titre  -->
                <RowDefinition Height="Auto" />
                <!--  Statistiques  -->
                <RowDefinition Height="Auto" />
                <!--  Boutons d'action  -->
                <RowDefinition Height="Auto" />
                <!--  Liste des relevés  -->
            </Grid.RowDefinitions>


            <!--  ══════════════════════════════════════════════════════════  -->
            <!--  SECTION 1 : TITRE  -->
            <!--  ══════════════════════════════════════════════════════════  -->
            <Grid
                Grid.Row="0"
                Height="88.5133333333333"
                Margin="0,0,0,25"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Icône  -->
                <Path
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"
                    Data="{StaticResource IconeEau}"
                    Fill="{DynamicResource BordurePrincipale}"
                    Stretch="Uniform" />



                <!--  Texte  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,4,0,0"
                        VerticalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="{StaticResource CouleurPrincipale}"
                        Text="Gestion de l'eau"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType" />

                    <TextBlock
                        Margin="0,6,0,0"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Suivi des relevés et consommations d'eau froide et chaude" />
                </StackPanel>
            </Grid>


            <!--  ══════════════════════════════════════════════════════════  -->
            <!--  SECTION 2 : STATISTIQUES RESPONSIVE  -->
            <!--  ══════════════════════════════════════════════════════════  -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Carte 1 : Dernier relevé  -->
                <Border
                    Grid.Column="0"
                    Padding="22"
                    Style="{StaticResource CarteStatistique}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  ─────────────────────────────  -->
                        <!--  TITRE  -->
                        <!--  ─────────────────────────────  -->
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TexteSecondaire}"
                            Text="Dernier relevé" />

                        <!--  ─────────────────────────────  -->
                        <!--  VALEUR + ICÔNE  -->
                        <!--  ─────────────────────────────  -->
                        <Grid
                            Grid.Row="1"
                            Margin="0,18,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Icône  -->
                            <Path
                                Grid.Column="0"
                                Width="26"
                                Height="26"
                                VerticalAlignment="Center"
                                Data="{StaticResource IconeDernierReleve}"
                                Fill="{DynamicResource TextePrincipal}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{StaticResource TextePrincipal}"
                                Text="--/--/----" />

                        </Grid>
                    </Grid>
                </Border>


                <!--  Carte 2 : Consommation du mois  -->
                <Border
                    Grid.Column="1"
                    Padding="22"
                    Style="{StaticResource CarteStatistique}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  ─────────────────────────────  -->
                        <!--  TITRE  -->
                        <!--  ─────────────────────────────  -->
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TexteSecondaire}"
                            Text="Consommation mois" />

                        <!--  ─────────────────────────────  -->
                        <!--  VALEUR + ICÔNE  -->
                        <!--  ─────────────────────────────  -->
                        <Grid
                            Grid.Row="1"
                            Margin="0,18,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Icône  -->
                            <Path
                                Grid.Column="0"
                                Width="26"
                                Height="26"
                                VerticalAlignment="Center"
                                Data="{StaticResource IconeConsommation}"
                                Fill="{DynamicResource TextePrincipal}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{StaticResource TextePrincipal}">
                                <Run Text="--" />
                                <Run
                                    FontSize="16"
                                    Foreground="{StaticResource TexteSecondaire}"
                                    Text=" m³" />
                            </TextBlock>

                        </Grid>
                    </Grid>
                </Border>


                <!--  Carte 3 : Moyenne mensuelle  -->
                <Border
                    Grid.Column="2"
                    Padding="22"
                    Style="{StaticResource CarteStatistique}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  ─────────────────────────────  -->
                        <!--  TITRE  -->
                        <!--  ─────────────────────────────  -->
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TexteSecondaire}"
                            Text="Moyenne mensuelle" />

                        <!--  ─────────────────────────────  -->
                        <!--  VALEUR + ICÔNE  -->
                        <!--  ─────────────────────────────  -->
                        <Grid
                            Grid.Row="1"
                            Margin="0,18,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Icône  -->
                            <Path
                                Grid.Column="0"
                                Width="26"
                                Height="26"
                                VerticalAlignment="Center"
                                Data="{StaticResource IconeMoyenneMensuelle}"
                                Fill="{DynamicResource TextePrincipal}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{StaticResource TextePrincipal}">

                                <Run Text="--" />
                                <Run
                                    FontSize="16"
                                    Foreground="{StaticResource TexteSecondaire}"
                                    Text=" m³" />

                            </TextBlock>

                        </Grid>
                    </Grid>
                </Border>


                <!--  Carte 4 : Coût estimé  -->
                <Border
                    Grid.Column="3"
                    Padding="22"
                    Style="{StaticResource CarteStatistique}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  ─────────────────────────────  -->
                        <!--  TITRE  -->
                        <!--  ─────────────────────────────  -->
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TexteSecondaire}"
                            Text="Coût estimé mois" />

                        <!--  ─────────────────────────────  -->
                        <!--  VALEUR + ICÔNE €  -->
                        <!--  ─────────────────────────────  -->
                        <Grid
                            Grid.Row="1"
                            Margin="0,18,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Valeur  -->
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextePrincipal}"
                                Text="--" />

                            <!--  Icône Euro  -->
                            <Path
                                Grid.Column="1"
                                Width="26"
                                Height="26"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Data="{StaticResource IconeSymboleEuro}"
                                Fill="{DynamicResource TextePrincipal}"
                                Stretch="Uniform" />

                        </Grid>
                    </Grid>
                </Border>

            </Grid>

            <!--  ══════════════════════════════════════════════════════════  -->
            <!--  SECTION 3 : BOUTONS D'ACTION  -->
            <!--  ══════════════════════════════════════════════════════════  -->
            <Border Grid.Row="2" Style="{StaticResource Carte}">
                <StackPanel
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <!--  AJOUTER  -->
                    <Button
                        Margin="0,0,20,0"
                        Background="{StaticResource CouleurSucces}"
                        Click="BtnAjouter_Click"
                        Style="{StaticResource BoutonAction}">

                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <Path
                                Width="30"
                                Height="20"
                                Margin="-2,0,0,0"
                                Data="{StaticResource IconeAjouter}"
                                Fill="{DynamicResource TexteBlanc}"
                                Stretch="Uniform" />

                            <TextBlock Text="Ajouter un relevé" />
                        </StackPanel>
                    </Button>

                    <!--  MODIFIER  -->
                    <Button
                        x:Name="BtnModifier"
                        Margin="0,0,20,0"
                        Background="{StaticResource CouleurPrincipale}"
                        Click="BtnModifier_Click"
                        IsEnabled="False"
                        Style="{StaticResource BoutonAction}">

                        <StackPanel Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="30"
                                Height="20"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Data="{StaticResource IconeModifier}"
                                Fill="{StaticResource TexteBlanc}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock VerticalAlignment="Center" Text="Modifier" />

                        </StackPanel>
                    </Button>

                    <!--  SUPPRIMER  -->
                    <Button
                        x:Name="BtnSupprimer"
                        Background="{StaticResource CouleurErreur}"
                        Click="BtnSupprimer_Click"
                        IsEnabled="False"
                        Style="{StaticResource BoutonAction}">

                        <StackPanel Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="30"
                                Height="20"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Data="{StaticResource IconeSupprimer}"
                                Fill="{StaticResource TexteBlanc}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock VerticalAlignment="Center" Text="Supprimer" />

                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>

            <!--  ══════════════════════════════════════════════════════════  -->
            <!--  SECTION 4 : HISTORIQUE DES RELEVÉS D'EAU (RESPONSIVE)  -->
            <!--  ══════════════════════════════════════════════════════════  -->
            <Border Grid.Row="3" Style="{StaticResource Carte}">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />

                        <!--  Titre  -->
                        <RowDefinition Height="*" />

                        <!--  Liste  -->
                    </Grid.RowDefinitions>

                    <!--  ─────────────────────────────────────────────  -->
                    <!--  TITRE AVEC ICÔNE  -->
                    <!--  ─────────────────────────────────────────────  -->

                    <Grid Grid.Row="0" Margin="0,0,0,20">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Icône  -->
                        <Path
                            Grid.Column="0"
                            Width="26"
                            Height="26"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Data="{StaticResource IconeHistoriqueReleve}"
                            Fill="{DynamicResource TextePrincipal}"
                            Stretch="Uniform" />

                        <!--  Texte  -->
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{StaticResource TextePrincipal}"
                            Text="HISTORIQUE DES RELEVÉS D'EAU" />
                    </Grid>


                    <!--  ─────────────────────────────────────────────  -->
                    <!--  LISTVIEW  -->
                    <!--  ─────────────────────────────────────────────  -->
                    <ListView
                        x:Name="ListViewReleves"
                        Grid.Row="1"
                        ItemContainerStyle="{StaticResource ListViewItemStyle}"
                        ScrollViewer.CanContentScroll="True"
                        SelectionChanged="ListViewReleves_SelectionChanged"
                        Style="{StaticResource ListViewRelevesStyle}"
                        VirtualizingStackPanel.IsVirtualizing="True">

                        <ListView.View>
                            <GridView AllowsColumnReorder="False">

                                <!--  DATE  -->
                                <GridViewColumn Width="150">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,6,0"
                                                    Data="{StaticResource IconeDate}"
                                                    Fill="{StaticResource TexteSecondaire}"
                                                    Stretch="Uniform" />

                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TexteSecondaire}"
                                                    Text="Date" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>

                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Text="{Binding DateReleve, StringFormat='dd/MM/yyyy'}"
                                                TextAlignment="Center" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  EAU FROIDE  -->
                                <GridViewColumn Width="160">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,6,0"
                                                    Data="{StaticResource IconeEau}"
                                                    Fill="{StaticResource CouleurEau}"
                                                    Stretch="Uniform" />

                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TexteSecondaire}"
                                                    Text="Froide" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>

                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center">
                                                <Run Text="{Binding IndexEauFroide, StringFormat='{}{0:F2}'}" />
                                                <Run Text=" m³" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  EAU CHAUDE  -->
                                <GridViewColumn Width="160">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,6,0"
                                                    Data="{StaticResource IconeEau}"
                                                    Fill="{DynamicResource CouleurErreurFoncee}"
                                                    Stretch="Uniform" />

                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TexteSecondaire}"
                                                    Text="Chaude" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>

                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center">
                                                <Run Text="{Binding IndexEauChaude, StringFormat='{}{0:F2}'}" />
                                                <Run Text=" m³" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  CONSOMMATION  -->
                                <GridViewColumn Width="180">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,6,0"
                                                    Data="{StaticResource IconeConsommation}"
                                                    Fill="{DynamicResource TexteSecondaire}"
                                                    Stretch="Uniform" />

                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TexteSecondaire}"
                                                    Text="Consommation" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>

                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{StaticResource CouleurPrincipale}"
                                                TextAlignment="Center">
                                                <Run Text="{Binding Consommation, StringFormat='{}{0:F2}'}" />
                                                <Run Text=" m³" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  COÛT  -->
                                <GridViewColumn Width="150">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,6,0"
                                                    Data="{StaticResource IconeSymboleEuro}"
                                                    Fill="{DynamicResource CouleurParametreElectricite}"
                                                    Stretch="Uniform" />

                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TexteSecondaire}"
                                                    Text="Coût" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>

                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{StaticResource CouleurPrincipale}"
                                                TextAlignment="Center">
                                                <Run Text="{Binding MontantEstime, StringFormat='{}{0:F2}'}" />
                                                <Run Text=" €" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  NOTES  -->
                                <GridViewColumn Width="300">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,6,0"
                                                    Data="{StaticResource IconeNotes}"
                                                    Fill="{StaticResource TexteSecondaire}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TexteSecondaire}"
