    <Window.Resources>

        <!--  Bouton navigation standard  -->
        <Style x:Key="BoutonNavigation" TargetType="Button">
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="24,0,0,0" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,4,0">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CouleurPrincipaleTresClaire}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CouleurPrincipaleClaire}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Bouton actif  -->
        <Style
            x:Key="BoutonNavigationActif"
            BasedOn="{StaticResource BoutonNavigation}"
            TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CouleurPrincipaleTresClaire}" />
            <Setter Property="Foreground" Value="{StaticResource CouleurPrincipale}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  MENU GAUCHE  -->
        <Border
            Grid.Column="0"
            Background="{StaticResource FondCarte}"
            BorderBrush="{StaticResource BordureClaire}"
            BorderThickness="0,0,1,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!--  EN-TÊTE  -->
                    <Border Height="80" Background="{DynamicResource BordurePrincipale}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="White">
                                Gestionnaire
                            </TextBlock>
                            <TextBlock
                                FontSize="17"
                                Foreground="White"
                                Opacity="0.95">
                                de Logement
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Height="12" />

                    <!--  SUIVI  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="SUIVI" />

                    <!--  ACCUEIL  -->
                    <Button
                        x:Name="BtnAccueil"
                        Click="BtnAccueil_Click"
                        Style="{StaticResource BoutonNavigationActif}">

                        <TextBlock
                            FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                            FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}">

                            <InlineUIContainer BaselineAlignment="Center">
                                <Image
                                    Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                    Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                    Margin="0,0,8,0"
                                    Source="{StaticResource IconeAccueil}"
                                    Stretch="Uniform">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                                    </Image.RenderTransform>
                                </Image>
                            </InlineUIContainer>

                            <Run Text="Accueil" />
                        </TextBlock>
                    </Button>

                    <!--  AUTRES BOUTONS  -->
                    <Button
                        x:Name="BtnFactures"
                        Click="BtnFactures_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Factures" />
                    </Button>

                    <Button
                        x:Name="BtnEau"
                        Click="BtnEau_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Eau" />
                    </Button>

                    <Button
                        x:Name="BtnElectricite"
                        Click="BtnElectricite_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Électricité" />
                    </Button>

                    <Button
                        x:Name="BtnChauffage"
                        Click="BtnChauffage_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Chauffage" />
                    </Button>

                    <Border
                        Height="1"
                        Margin="12,14"
                        Background="{StaticResource BordureClaire}" />

                    <!--  ANALYSE  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="ANALYSE" />

                    <Button
                        x:Name="BtnAchats"
                        Click="BtnAchats_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Achats" />
                    </Button>

                    <Button
                        x:Name="BtnStatistiques"
                        Click="BtnStatistiques_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Statistiques" />
                    </Button>

                    <Border
                        Height="1"
                        Margin="12,14"
                        Background="{StaticResource BordureClaire}" />

                    <!--  APPLICATION  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="APPLICATION" />

                    <Button
                        x:Name="BtnParametres"
                        Click="BtnParametres_Click"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock Text="Paramètres" />
                    </Button>

                    <!--  HISTORIQUE (RESTAURÉ)  -->
                    <Button
                        IsEnabled="False"
                        Opacity="0.5"
                        Style="{StaticResource BoutonNavigation}">
                        <TextBlock>
                            <Run Text="  Historique" />
                        </TextBlock>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  CONTENU DROIT  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="30,0"
                Background="{StaticResource FondCarte}"
                BorderBrush="{StaticResource BordureClaire}"
                BorderThickness="0,0,0,1">
                <TextBlock
                    x:Name="TitrePage"
                    VerticalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextePrincipal}">
                    <Run x:Name="TexteTitre" Text="Tableau de bord" />
                </TextBlock>
            </Border>

            <Frame
                x:Name="FramePrincipal"
                Grid.Row="1"
                Background="{StaticResource FondSecondaire}"
                NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
