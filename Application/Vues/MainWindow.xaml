<Window
    x:Class="GestionnaireDeLogement.Application.Vues.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestionnaire de Logement"
    Width="1200"
    Height="700"
    MinWidth="900"
    MinHeight="600"
    Background="{StaticResource FondSecondaire}"
    WindowStartupLocation="CenterScreen">

    <!--
        *╔=============================================================╗
        *║                   Gestionnaire de Logement                  ║
        *║                       Module : Principal                    ║
        *║                                                             ║
        *║                   Usage commercial interdit                 ║
        *║                    Licence : CC BY-NC  4.0                  ║
        *║                  Copyright © 2026 Flo Latury                ║
        *╚=============================================================╝
    -->

    <Window.Resources>

        <!--  ─────────────────────────────────────────────────────────────────  -->
        <!--  Section 01 : Bouton navigation standardBouton navigation standard  -->
        <!--  ─────────────────────────────────────────────────────────────────  -->
        <Style x:Key="BoutonNavigation" TargetType="Button">
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="24,0,0,0" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,4,0">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CouleurPrincipaleTresClaire}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CouleurPrincipaleClaire}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ─────────────────────────  -->
        <!--  Section 02 : Bouton Actif  -->
        <!--  ─────────────────────────  -->
        <Style
            x:Key="BoutonNavigationActif"
            BasedOn="{StaticResource BoutonNavigation}"
            TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CouleurPrincipaleTresClaire}" />
            <Setter Property="Foreground" Value="{StaticResource CouleurPrincipale}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  MENU GAUCHE  -->
        <Border
            Grid.Column="0"
            Background="{StaticResource FondCarte}"
            BorderBrush="{StaticResource BordureClaire}"
            BorderThickness="0,0,1,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!--  ────────────────────  -->
                    <!--  Section : 03 EN-TÊTE  -->
                    <!--  ────────────────────  -->
                    <Border Height="80" Background="{DynamicResource BordurePrincipale}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <!--  Icône Logement  -->
                            <Path
                                Width="28"
                                Height="28"
                                Margin="0,0,12,0"
                                Data="{StaticResource IconeLogement}"
                                Fill="White"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Gestionnaire" />
                                <TextBlock
                                    FontSize="17"
                                    Foreground="White"
                                    Opacity="0.95"
                                    Text="de Logement" />
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!--  Bordure  -->
                    <Border Height="12" />

                    <!--  ──────────────────  -->
                    <!--  Section 04 : SUIVI  -->
                    <!--  ──────────────────  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="SUIVI" />

                    <!--  TABLEAU DE BORD  -->
                    <Button
                        x:Name="BtnAccueil"
                        Click="BtnAccueil_Click"
                        Style="{StaticResource BoutonNavigationActif}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeTableauDeBord}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Tableau de bord" />

                        </StackPanel>
                    </Button>

                    <!--  FACTURES  -->
                    <Button
                        x:Name="BtnFactures"
                        Click="BtnFactures_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeFacture}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Factures" />

                        </StackPanel>
                    </Button>

                    <!--  EAU  -->
                    <Button
                        x:Name="BtnEau"
                        Click="BtnEau_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeEau}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Eau" />

                        </StackPanel>
                    </Button>

                    <!--  ÉLÉTRICITÉ  -->
                    <Button
                        x:Name="BtnElectricite"
                        Click="BtnElectricite_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeElectricite}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Électricité" />

                        </StackPanel>
                    </Button>

                    <!--  CHAUFFAGE  -->
                    <Button
                        x:Name="BtnChauffage"
                        Click="BtnChauffage_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeChauffage}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Chauffage" />

                        </StackPanel>
                    </Button>

                    <!--  Bordure  -->
                    <Border
                        Height="1"
                        Margin="12,14"
                        Background="{StaticResource BordureClaire}" />

                    <!--  ────────────────────  -->
                    <!--  Section 05 : ANALYSE  -->
                    <!--  ────────────────────  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="ANALYSE" />

                    <!--  ACHATS  -->
                    <Button
                        x:Name="BtnAchats"
                        Click="BtnAchats_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeAchats}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Achats" />

                        </StackPanel>
                    </Button>

                    <!--  STATISTIQUES  -->
                    <Button
                        x:Name="BtnStatistiques"
                        Click="BtnStatistiques_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeStatistiques}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Statistiques" />

                        </StackPanel>
                    </Button>

                    <!--  Bordure  -->
                    <Border
                        Height="1"
                        Margin="12,14"
                        Background="{StaticResource BordureClaire}" />

                    <!--  ────────────────────────  -->
                    <!--  Section 06 : APPLICATION  -->
                    <!--  ────────────────────────  -->
                    <TextBlock
                        Margin="20,0,0,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="APPLICATION" />

                    <!--  PARAMETRES  -->
                    <Button
                        x:Name="BtnParametres"
                        Click="BtnParametres_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeParametres}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Paramètres" />

                        </StackPanel>
                    </Button>

                    <!--  HISTORIQUE  -->
                    <Button
                        x:Name="BtnHistorique"
                        Click="BtnHistorique_Click"
                        Style="{StaticResource BoutonNavigation}">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <!--  Icône  -->
                            <Path
                                Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Height="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                Margin="0,0,8,0"
                                Data="{StaticResource IconeHistorique}"
                                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Stretch="Uniform" />

                            <!--  Texte  -->
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                                FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                Text="Historique" />

                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  CONTENU DROIT  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Bordure haut  -->
            <Border
                Grid.Row="0"
                Padding="30,0"
                Background="{StaticResource FondCarte}"
                BorderBrush="{StaticResource BordureClaire}"
                BorderThickness="0,0,0,1">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                    <!--  Icône  -->
                    <Path
                        Width="28"
                        Height="28"
                        Margin="0,0,12,0"
                        Data="{StaticResource IconeTableauDeBord}"
                        Fill="{StaticResource TextePrincipal}"
                        Stretch="Uniform" />

                    <!--  Texte  -->
                    <TextBlock
                        x:Name="TitrePage"
                        VerticalAlignment="Center"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextePrincipal}">
                        <Run x:Name="TexteTitre" Text="Tableau de bord" />
                    </TextBlock>
                </StackPanel>

            </Border>

            <!--  Cadre  -->
            <Frame
                x:Name="FramePrincipal"
                Grid.Row="1"
                Background="{StaticResource FondSecondaire}"
                NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>

