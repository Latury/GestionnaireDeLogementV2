<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DrawingImage x:Key="IconeAjouter">
        <DrawingImage.Drawing>
            <DrawingGroup>

                <!--  Mise à l’échelle du path  -->
                <DrawingGroup.Transform>
                    <ScaleTransform ScaleX="0.02" ScaleY="0.02" />
                </DrawingGroup.Transform>

                <!--  Géométrie de l'icône  -->
                <GeometryDrawing Brush="{DynamicResource TextePrincipal}" Geometry="M450-450H220v-60h230v-230h60v230h230v60H510v230h-60v-230Z" />

            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

</ResourceDictionary>
