            <DrawingGroup>

                <!-- Mise à l’échelle uniforme -->
                <DrawingGroup.Transform>
                    <ScaleTransform ScaleX="0.02"
                                    ScaleY="0.02"/>
                </DrawingGroup.Transform>

                <!-- Géométrie principale -->
                <GeometryDrawing
                    Brush="{DynamicResource TextePrincipal}"
                    Geometry="M400-269.23v-40h400v40H400ZM400-460v-40h400v40H400ZM160-650.77v-40h640v40H160Z"/>

            </DrawingGroup>
        </DrawingImage.Drawing>
