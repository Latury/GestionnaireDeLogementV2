    <!--  ═══════════════════════════════════════════════════════════════  -->
    <!--  Utilisé dans : MainWindow, AccueilVue, FacturesVue, boutons  -->
    <!--  ═══════════════════════════════════════════════════════════════  -->
    <SolidColorBrush x:Key="CouleurPrincipale" Color="#3B82F6" />
