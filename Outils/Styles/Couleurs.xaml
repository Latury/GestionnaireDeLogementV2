    <!--  ═══════════════════════════════════════════════════════════════  -->
    <!--  🎨 DÉGRADÉS (Pour futurs effets)  -->
    <!--  ═══════════════════════════════════════════════════════════════  -->
    <LinearGradientBrush x:Key="DegradeBleu" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#3B82F6" />
        <GradientStop Offset="1" Color="#2563EB" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DegradeVert" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#10B981" />
        <GradientStop Offset="1" Color="#059669" />
    </LinearGradientBrush>

