<Window
    x:Class="GestionnaireDeLogement.Chauffage.Vues.RelevesChauffage.ModifierReleveChauffageVue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Modifier un relevé de chauffage"
    Width="420"
    Height="520"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  TITRE  -->
        <TextBlock
            Margin="0,0,0,20"
            FontSize="22"
            FontWeight="Bold"
            Text="✏️ Modifier un relevé" />

        <!--  FORMULAIRE  -->
        <StackPanel Grid.Row="1">

            <TextBlock Text="Date du relevé" />
            <DatePicker Margin="0,5,0,15" SelectedDate="{Binding DateReleve}" />

            <TextBlock Text="Type de chauffage" />
            <ComboBox Margin="0,5,0,15" SelectedItem="{Binding TypeChauffage}">
                <ComboBoxItem Content="Gaz" />
                <ComboBoxItem Content="Fioul" />
                <ComboBoxItem Content="Électrique" />
                <ComboBoxItem Content="Bois" />
            </ComboBox>

            <TextBlock Text="Quantité" />
            <TextBox Margin="0,5,0,15" Text="{Binding Quantite}" />

            <TextBlock Text="Unité" />
            <TextBox Margin="0,5,0,15" Text="{Binding Unite}" />

            <TextBlock Text="Coût (€)" />
            <TextBox Margin="0,5,0,15" Text="{Binding MontantEstime}" />

            <TextBlock Text="Notes" />
            <TextBox
                Height="60"
                AcceptsReturn="True"
                Text="{Binding Notes}"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  BOUTONS  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,10,0"
                Click="Annuler_Click"
                Content="Annuler" />

            <Button
                Width="100"
                Click="Valider_Click"
                Content="Enregistrer" />
        </StackPanel>
    </Grid>
</Window>
