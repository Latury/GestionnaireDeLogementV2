<Window
    x:Class="GestionnaireDeLogement.Chauffage.Vues.RelevesChauffage.AjouterReleveChauffageVue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ajouter un relevé de chauffage"
    Width="700"
    Height="750"
    Background="{StaticResource FondSecondaire}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <!--  =========================================================  -->
    <!--   RESSOURCES  -->
    <!--  =========================================================  -->
    <Window.Resources>

        <!--  Carte  -->
        <Style x:Key="Carte" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="30" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Direction="270"
                        Opacity="0.12"
                        ShadowDepth="3" />
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  =========================================================  -->
    <!--   CONTENEUR  -->
    <!--  =========================================================  -->
    <Border Margin="25" Style="{StaticResource Carte}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  =================================================  -->
            <!--   TITRE  -->
            <!--  =================================================  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource CouleurChauffage}">
                     Ajouter un relevé de chauffage
                </TextBlock>

                <TextBlock
                    Margin="0,6,0,0"
                    FontSize="14"
                    Foreground="{StaticResource TexteSecondaire}"
                    Text="Saisissez les informations du relevé" />
            </StackPanel>

            <!--  =================================================  -->
            <!--   FORMULAIRE  -->
            <!--  =================================================  -->
            <Grid Grid.Row="1" Margin="26,0,-26,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--   DATE  -->
                <StackPanel Margin="0,0,15,15">
                    <TextBlock FontWeight="SemiBold" Text="Date du relevé" />

                    <Border
                        Height="44"
                        Padding="8,0"
                        Background="White"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="2"
                        CornerRadius="10">
                        <DatePicker
                            x:Name="DpDate"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0" />
                    </Border>
                </StackPanel>

                <!--   TYPE  -->
                <StackPanel Grid.Column="1" Margin="15,0,0,15">
                    <TextBlock FontWeight="SemiBold" Text="Type de chauffage" />

                    <Border
                        Height="44"
                        Padding="6,0"
                        Background="White"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="0"
                        CornerRadius="0">
                        <ComboBox
                            x:Name="CmbType"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            SelectedIndex="0">
                            <ComboBoxItem Content="— Sélectionner un type —" IsEnabled="False" />
                            <ComboBoxItem Content="Fioul" />
                            <ComboBoxItem Content="Gaz" />
                            <ComboBoxItem Content="Électrique" />
                            <ComboBoxItem Content="Bois" />
                        </ComboBox>

                    </Border>
                </StackPanel>

                <!--   QUANTITÉ  -->
                <StackPanel Grid.Row="1" Margin="0,0,15,15">
                    <TextBlock FontWeight="SemiBold" Text="Quantité" />
                    <Border
                        Height="44"
                        Background="White"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="2"
                        CornerRadius="10">
                        <TextBox
                            x:Name="TxtQuantite"
                            Padding="8,0"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0" />
                    </Border>
                </StackPanel>

                <!--   UNITÉ  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="15,0,0,15">
                    <TextBlock FontWeight="SemiBold" Text="Unité" />
                    <Border
                        Height="44"
                        Background="White"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="2"
                        CornerRadius="10">
                        <TextBox
                            x:Name="TxtUnite"
                            Padding="8,0"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0" />
                    </Border>
                </StackPanel>

                <!--   MONTANT (CENTRÉ)  -->
                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Width="300"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center">
                    <TextBlock
                        Margin="-175,0,0,0"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Montant estimé" />
                    <Border
                        Height="44"
                        Background="White"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="2"
                        CornerRadius="10">
                        <TextBox
                            x:Name="TxtMontant"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            TextAlignment="Center" />
                    </Border>
                </StackPanel>

                <!--   NOTES  -->
                <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                    <TextBlock FontWeight="SemiBold" Text="Notes" />
                    <Border
                        Height="80"
                        Background="White"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="2"
                        CornerRadius="10">
                        <TextBox
                            x:Name="TxtNotes"
                            Padding="10"
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                            TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Grid>

            <!--  =================================================  -->
            <!--   RÉSUMÉ TEMPS RÉEL  -->
            <!--  =================================================  -->
            <Border
                Grid.Row="1"
                Margin="26,337,-26,30"
                Padding="15"
                Background="{StaticResource FondInfoClaire}"
                BorderBrush="{StaticResource BordureClaire}"
                BorderThickness="1"
                CornerRadius="10">

                <StackPanel>
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Résumé du relevé" />

                    <TextBlock
                        x:Name="TxtResume"
                        Margin="0,6,0,0"
                        FontSize="14"
                        Foreground="{StaticResource TextePrincipal}"
                        Text="Aucune information pour le moment" />
                </StackPanel>
            </Border>


            <!--  =================================================  -->
            <!--   BOUTONS (INCHANGÉS)  -->
            <!--  =================================================  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,25,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Width="220"
                    Height="70"
                    Click="Annuler_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource Gris300}" />
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    Annuler
                </Button>

                <Button
                    Width="260"
                    Height="70"
                    Margin="15,0,0,0"
                    Click="Valider_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource CouleurSucces}" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                     Valider le relevé
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
