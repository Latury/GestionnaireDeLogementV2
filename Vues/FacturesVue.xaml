<Page
    x:Class="GestionnaireDeLogement.Vues.FacturesVue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource FondSecondaire}">

    <Page.Resources>
        <!--  Style pour les boutons d'action  -->
        <Style x:Key="BoutonAction" TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Background" Value="{StaticResource CouleurPrincipale}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="15,0"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CouleurPrincipaleClaire}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style pour le bouton Supprimer (rouge)  -->
        <Style
            x:Key="BoutonSupprimer"
            BasedOn="{StaticResource BoutonAction}"
            TargetType="Button">
            <Setter Property="Background" Value="#E53935" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C62828" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style pour la carte principale  -->
        <Style x:Key="Carte" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource FondCarte}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.1"
                        ShadowDepth="2"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style pour la barre de recherche  -->
        <Style x:Key="BarreRecherche" TargetType="TextBox">
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="35,0,10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="{StaticResource FondCarte}" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderBrush" Value="{StaticResource BordureClaire}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style pour les ComboBox  -->
        <Style x:Key="ComboBoxFiltre" TargetType="ComboBox">
            <Setter Property="Height" Value="40" />
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="{StaticResource FondCarte}" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderBrush" Value="{StaticResource BordureClaire}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!--  Barre de recherche et filtres  -->
            <RowDefinition Height="Auto" />
            <!--  Espacement  -->
            <RowDefinition Height="15" />
            <!--  Boutons d'action  -->
            <RowDefinition Height="Auto" />
            <!--  Espacement  -->
            <RowDefinition Height="15" />
            <!--  Tableau des factures  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  ══════════════════════════════════════════════════════  -->
        <!--  SECTION 1 : BARRE DE RECHERCHE ET FILTRES  -->
        <!--  ══════════════════════════════════════════════════════  -->
        <Border Grid.Row="0" Style="{StaticResource Carte}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Barre de recherche avec icône  -->
                <Grid Grid.Column="0">
                    <TextBox
                        x:Name="TxtRecherche"
                        Style="{StaticResource BarreRecherche}"
                        Text=""
                        ToolTip="Rechercher une facture" />

                    <!--  Icône de recherche  -->
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="{StaticResource TexteSecondaire}"
                        IsHitTestVisible="False"
                        Text="{StaticResource EmojiRechercher}" />

                    <!--  Placeholder text  -->
                    <TextBlock
                        Margin="35,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource TexteSecondaire}"
                        IsHitTestVisible="False"
                        Text="Rechercher une facture...">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=TxtRecherche}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!--  Filtre par type  -->
                <ComboBox
                    x:Name="CmbType"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    SelectedIndex="0"
                    Style="{StaticResource ComboBoxFiltre}">
                    <ComboBoxItem Content="Tous les types" />
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiEau}" />
                            <TextBlock Text="Eau" />
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiElectricite}" />
                            <TextBlock Text="Électricité" />
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiChauffage}" />
                            <TextBlock Text="Chauffage" />
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiAchats}" />
                            <TextBlock Text="Achats" />
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>

                <!--  Filtre par statut  -->
                <ComboBox
                    x:Name="CmbStatut"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    SelectedIndex="0"
                    Style="{StaticResource ComboBoxFiltre}">
                    <ComboBoxItem Content="Tous les statuts" />
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiSucces}" />
                            <TextBlock Text="Payée" />
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiAlerte}" />
                            <TextBlock Text="En attente" />
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
            </Grid>
        </Border>

        <!--  ══════════════════════════════════════════════════════  -->
        <!--  SECTION 2 : BOUTONS D'ACTION  -->
        <!--  ══════════════════════════════════════════════════════  -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button
                x:Name="BtnAjouter"
                Click="BtnAjouter_Click"
                Style="{StaticResource BoutonAction}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiAjouter}" />
                    <TextBlock Text="Ajouter" />
                </StackPanel>
            </Button>

            <Button
                x:Name="BtnModifier"
                Click="BtnModifier_Click"
                Style="{StaticResource BoutonAction}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiModifier}" />
                    <TextBlock Text="Modifier" />
                </StackPanel>
            </Button>

            <Button
                x:Name="BtnSupprimer"
                Click="BtnSupprimer_Click"
                Style="{StaticResource BoutonSupprimer}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,8,0" Text="{StaticResource EmojiSupprimer}" />
                    <TextBlock Text="Supprimer" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  ══════════════════════════════════════════════════════  -->
        <!--  SECTION 3 : TABLEAU DES FACTURES  -->
        <!--  ══════════════════════════════════════════════════════  -->
        <Border Grid.Row="4" Style="{StaticResource Carte}">
            <Grid>
                <Grid.RowDefinitions>
                    <!--  En-tête  -->
                    <RowDefinition Height="Auto" />
                    <!--  Séparateur  -->
                    <RowDefinition Height="1" />
                    <!--  Liste  -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  EN-TÊTE DU TABLEAU  -->
                <Grid Grid.Row="0" Margin="10,10,10,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Type" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Description" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Date" />
                    <TextBlock
                        Grid.Column="3"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Montant" />
                    <TextBlock
                        Grid.Column="4"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Statut" />
                </Grid>

                <!--  SÉPARATEUR  -->
                <Border Grid.Row="1" Background="{StaticResource BordureClaire}" />

                <!--  CONTENU (pour l'instant vide)  -->
                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="64"
                        Opacity="0.3"
                        Text="{StaticResource EmojiConstruction}" />
                    <TextBlock
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Aucune facture pour le moment" />
                    <TextBlock
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource TexteSecondaire}"
                        Text="Cliquez sur 'Ajouter' pour créer votre première facture" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
