<Page
    x:Class="GestionnaireDeLogement.Vues.ModifierFactureVue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionnaireDeLogement.Vues"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ModifierFactureVue"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    Background="{StaticResource FondSecondaire}"
    mc:Ignorable="d">

    <!--  ══════════════════════════════════════════════════════════  -->
    <!--  RESSOURCES LOCALES  -->
    <!--  ══════════════════════════════════════════════════════════  -->
    <Page.Resources>
        <!--  Style pour les labels  -->
        <Style x:Key="Label" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <!--  Style pour les champs de saisie  -->
        <Style x:Key="ChampSaisie" TargetType="TextBox">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="15,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderBrush" Value="{StaticResource BordureClaire}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <!--  Style pour les ComboBox  -->
        <Style x:Key="ChampCombo" TargetType="ComboBox">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderBrush" Value="{StaticResource BordureClaire}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <!--  Style pour les DatePicker avec icône calendrier à droite  -->
        <Style x:Key="ChampDate" TargetType="DatePicker">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
            <Setter Property="BorderBrush" Value="{StaticResource BordureClaire}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <!--  TextBox pour afficher la date  -->
                                <DatePickerTextBox
                                    x:Name="PART_TextBox"
                                    Grid.Column="0"
                                    Padding="15,0"
                                    VerticalContentAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Foreground="{TemplateBinding Foreground}" />

                                <!--  Bouton calendrier avec emoji centré  -->
                                <Button
                                    x:Name="PART_Button"
                                    Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="📅" />
                                </Button>

                                <!--  Popup pour le calendrier  -->
                                <Popup
                                    x:Name="PART_Popup"
                                    AllowsTransparency="True"
                                    Placement="Bottom"
                                    PlacementTarget="{Binding ElementName=PART_TextBox}"
                                    StaysOpen="False" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style pour les cartes  -->
        <Style x:Key="Carte" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="30" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Direction="270"
                        Opacity="0.1"
                        ShadowDepth="3"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!--  ══════════════════════════════════════════════════════════  -->
    <!--  CONTENU PRINCIPAL (SANS SCROLLVIEWER)  -->
    <!--  ══════════════════════════════════════════════════════════  -->
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Titre principal  -->
            <RowDefinition Height="*" />
            <!--  Contenu 2 colonnes  -->
        </Grid.RowDefinitions>

        <!--  ══════════════════════════════════════════════════════════  -->
        <!--  TITRE PRINCIPAL  -->
        <!--  ══════════════════════════════════════════════════════════  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="32"
                FontWeight="Bold"
                Foreground="{StaticResource CouleurFacture}">
                <Run Text="✏️" />
                <Run Text="Modifier une facture" />
            </TextBlock>
            <TextBlock
                Margin="0,5,0,0"
                FontSize="15"
                Foreground="{StaticResource TexteSecondaire}"
                Text="Modifiez les informations de cette facture" />
        </StackPanel>

        <!--  ══════════════════════════════════════════════════════════  -->
        <!--  GRID 2 COLONNES  -->
        <!--  ══════════════════════════════════════════════════════════  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  ═══════════════════════════════════════════════════════════  -->
            <!--  COLONNE GAUCHE : FORMULAIRE DE MODIFICATION  -->
            <!--  ═══════════════════════════════════════════════════════════  -->
            <Border Grid.Column="0" Style="{StaticResource Carte}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!--  Formulaire  -->
                        <RowDefinition Height="Auto" />
                        <!--  Boutons  -->
                    </Grid.RowDefinitions>

                    <!--  FORMULAIRE (NOUVELLE ORGANISATION)  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  ═══════════════════════════════════════════  -->
                        <!--  COLONNE GAUCHE  -->
                        <!--  ═══════════════════════════════════════════  -->

                        <!--  Type de facture (GAUCHE)  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,15">
                            <TextBlock Style="{StaticResource Label}">
                                <Run Text="📋" />
                                <Run Text="Type de facture" />
                            </TextBlock>
                            <ComboBox x:Name="CmbType" Style="{StaticResource ChampCombo}">
                                <ComboBoxItem>
                                    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Text="💧" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="Eau" />
                                        </StackPanel>
                                    </Grid>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Text="⚡" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="Électricité" />
                                        </StackPanel>
                                    </Grid>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Text="🔥" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="Chauffage" />
                                        </StackPanel>
                                    </Grid>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Text="🛒" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="Autre" />
                                        </StackPanel>
                                    </Grid>
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!--  Date de facture (GAUCHE)  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,15">
                            <TextBlock Style="{StaticResource Label}">
                                <Run Text="📅" />
                                <Run Text="Date de facture" />
                            </TextBlock>
                            <DatePicker x:Name="DateFacture" Style="{StaticResource ChampDate}" />
                        </StackPanel>

                        <!--  Facture payée (GAUCHE - EN DESSOUS DE DATE)  -->
                        <CheckBox
                            x:Name="ChkPayee"
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,8,0,15"
                            VerticalAlignment="Center"
                            FontSize="17"
                            Foreground="{StaticResource TextePrincipal}">
                            <TextBlock>
                                <Run FontSize="20" Text="✅" />
                                <Run FontSize="17" Text="Facture payée" />
                            </TextBlock>
                        </CheckBox>

                        <!--  ═══════════════════════════════════════════  -->
                        <!--  COLONNE DROITE  -->
                        <!--  ═══════════════════════════════════════════  -->

                        <!--  Montant (DROITE - À COTÉ DE TYPE)  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="0,0,0,15">
                            <TextBlock Style="{StaticResource Label}">
                                <Run Text="💰" />
                                <Run Text="Montant (€)" />
                            </TextBlock>
                            <TextBox x:Name="TxtMontant" Style="{StaticResource ChampSaisie}" />
                        </StackPanel>

                        <!--  Date d'échéance (DROITE - À COTÉ DE DATE)  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Label}">
                                    <Run Text="⏰" />
                                    <Run Text="Date d'échéance" />
                                </TextBlock>
                                <TextBlock
                                    x:Name="TxtAlerteEcheance"
                                    Margin="8,0,0,8"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource CouleurUrgenceMoyenne}"
                                    Text="⚠️"
                                    ToolTip="Cette facture est en retard ! Définissez une nouvelle échéance."
                                    Visibility="Collapsed" />
                            </StackPanel>
                            <Border
                                x:Name="BorderEcheance"
                                BorderBrush="{StaticResource BordureClaire}"
                                BorderThickness="2"
                                CornerRadius="4">
                                <DatePicker
                                    x:Name="DateEcheance"
                                    BorderThickness="0"
                                    Style="{StaticResource ChampDate}" />
                            </Border>
                        </StackPanel>

                        <!--  Notes (TOUTE LA LARGEUR)  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,0">
                            <TextBlock Style="{StaticResource Label}">
                                <Run Text="📝" />
                                <Run Text="Notes (optionnel)" />
                            </TextBlock>
                            <TextBox
                                x:Name="TxtNotes"
                                MinHeight="100"
                                Padding="15,12"
                                VerticalContentAlignment="Top"
                                AcceptsReturn="True"
                                Background="White"
                                BorderBrush="{StaticResource BordureClaire}"
                                BorderThickness="2"
                                FontSize="16"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
                    </Grid>

                    <!--  BOUTONS (STYLE GROS BOUTONS)  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <!--  Bouton Annuler (Gris)  -->
                        <Button
                            x:Name="BtnAnnuler"
                            Click="BtnAnnuler_Click"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource Gris300}" />
                                    <Setter Property="Foreground" Value="{StaticResource TextePrincipal}" />
                                    <Setter Property="FontSize" Value="18" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Padding" Value="40,20" />
                                    <Setter Property="Margin" Value="0,0,25,0" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="MinWidth" Value="200" />
                                    <Setter Property="Height" Value="70" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource Gris400}" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource Gris500}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="❌" />
                                <TextBlock VerticalAlignment="Center" Text="Annuler" />
                            </StackPanel>
                        </Button>

                        <!--  Bouton Enregistrer (Vert)  -->
                        <Button
                            x:Name="BtnEnregistrer"
                            Click="BtnEnregistrer_Click"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource CouleurSucces}" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontSize" Value="18" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Padding" Value="40,20" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="MinWidth" Value="220" />
                                    <Setter Property="Height" Value="70" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource CouleurSuccesFoncee}" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource CouleurSuccesSombre}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="💾" />
                                <TextBlock VerticalAlignment="Center" Text="Enregistrer" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  ═══════════════════════════════════════════════════════════  -->
            <!--  COLONNE DROITE : FACTURES EN COURS / RELANCE  -->
            <!--  ═══════════════════════════════════════════════════════════  -->
            <Border Grid.Column="2" Style="{StaticResource Carte}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--  Titre  -->
                        <RowDefinition Height="Auto" />
                        <!--  Statistiques  -->
                        <RowDefinition Height="Auto" />
                        <!--  Onglets  -->
                        <RowDefinition Height="*" />
                        <!--  Liste  -->
                    </Grid.RowDefinitions>

                    <!--  TITRE  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextePrincipal}">
                        <Run Text="📋" />
                        <Run Text="Autres factures" />
                    </TextBlock>

                    <!--  STATISTIQUES COLORÉES  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,12"
                        Padding="12"
                        Background="{StaticResource FondInfoClaire}"
                        BorderBrush="{StaticResource BordureClaire}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Ligne 1 : Compteurs  -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Non payées  -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="22"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource CouleurAlerteMoyenne}">
                                        <Run x:Name="TxtNbNonPayees" Text="0" />
                                    </TextBlock>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        Foreground="{StaticResource TexteSecondaire}"
                                        Text="Non payées" />
                                </StackPanel>

                                <!--  Relances  -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="22"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource CouleurUrgence}">
                                        <Run x:Name="TxtNbRelances" Text="0" />
                                    </TextBlock>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        Foreground="{StaticResource TexteSecondaire}"
                                        Text="⚠️ Relances" />
                                </StackPanel>
                            </Grid>

                            <!--  Ligne 2 : Total  -->
                            <Border
                                Grid.Row="2"
                                Padding="10,6"
                                Background="White"
                                CornerRadius="6">
                                <Grid>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource CouleurPrincipaleInfo}"
                                        Text="💰 Total" />
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource CouleurPrincipaleInfo}">
                                        <Run x:Name="TxtTotalMontant" Text="0,00" />
                                        <Run Text="€" />
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!--  ONGLETS  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <RadioButton
                            x:Name="RbNonPayees"
                            Checked="RbFiltreFactures_Checked"
                            FontSize="13"
                            IsChecked="True">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,5,0" Text="❌" />
                                <TextBlock Text="Non payées" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                            x:Name="RbRelance"
                            Margin="12,0,0,0"
                            Checked="RbFiltreFactures_Checked"
                            FontSize="13">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,5,0" Text="📧" />
                                <TextBlock Text="Relances" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <!--  LISTE DES FACTURES (avec scroll interne limité)  -->
                    <ScrollViewer
                        Grid.Row="3"
                        MaxHeight="400"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ListeAutresFactures">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        x:Name="CarteFacture"
                                        Margin="0,0,0,8"
                                        Padding="10"
                                        Background="White"
                                        BorderThickness="3"
                                        CornerRadius="8"
                                        Loaded="CarteFacture_Loaded"
                                        Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Type + Montant  -->
                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource TextePrincipal}">
                                                    <Run Text="📋" />
                                                    <Run Text="{Binding Type}" />
                                                </TextBlock>
                                                <TextBlock
                                                    HorizontalAlignment="Right"
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource CouleurPrincipale}"
                                                    Text="{Binding Montant, StringFormat='{}{0:F2} €'}" />
                                            </Grid>

                                            <!--  Date facture  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,4,0,0"
                                                FontSize="12"
                                                Foreground="{StaticResource TexteSecondaire}">
                                                <Run Text="📅" />
                                                <Run Text="{Binding DateFacture, StringFormat='{}{0:dd/MM/yyyy}'}" />
                                            </TextBlock>

                                            <!--  Échéance avec badge coloré  -->
                                            <StackPanel
                                                Grid.Row="2"
                                                Margin="0,4,0,0"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    x:Name="TxtBadgeUrgence"
                                                    Margin="0,0,8,0"
                                                    FontSize="11"
                                                    FontWeight="Bold"
                                                    Loaded="TxtBadgeUrgence_Loaded"
                                                    Tag="{Binding}" />
                                                <TextBlock FontSize="12" Foreground="{StaticResource TexteSecondaire}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding DateEcheance, StringFormat='⏰ {0:dd/MM/yyyy}'}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DateEcheance}" Value="{x:Null}">
                                                                    <Setter Property="Text" Value="⏳ Pas d'échéance" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--  MESSAGE SI AUCUNE FACTURE  -->
                    <StackPanel
                        x:Name="MessageVide"
                        Grid.Row="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Opacity="0.3"
                            Text="✅" />
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="13"
                            Foreground="{StaticResource TexteSecondaire}"
